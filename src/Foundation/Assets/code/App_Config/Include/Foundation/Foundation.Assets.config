<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
    <sitecore>
        <pipelines>
            <mvc.getPageRendering>
                <processor patch:before="*[@type='Sitecore.Mvc.Pipelines.Response.GetPageRendering.GetLayoutRendering, Sitecore.Mvc']" type="xHelix.Foundation.Assets.Pipelines.GetPageRendering.ClearAssets, xHelix.Foundation.Assets"/>
                <processor patch:before="*[@type='Sitecore.Mvc.Pipelines.Response.GetPageRendering.GetLayoutRendering, Sitecore.Mvc']" type="xHelix.Foundation.Assets.Pipelines.GetPageRendering.AddAssets, xHelix.Foundation.Assets">
                    <siteAssets hint="raw:AddAsset" />
                </processor>
                <processor patch:before="*[@type='Sitecore.Mvc.Pipelines.Response.GetPageRendering.GetLayoutRendering, Sitecore.Mvc']" type="xHelix.Foundation.Assets.Pipelines.GetPageRendering.AddThemeAssets, xHelix.Foundation.Assets"/>
                <processor patch:before="*[@type='Sitecore.Mvc.Pipelines.Response.GetPageRendering.GetLayoutRendering, Sitecore.Mvc']" type="xHelix.Foundation.Assets.Pipelines.GetPageRendering.AddPageAssets, xHelix.Foundation.Assets"/>
                <processor patch:before="*[@type='Sitecore.Mvc.Pipelines.Response.GetPageRendering.GetLayoutRendering, Sitecore.Mvc']" type="xHelix.Foundation.Assets.Pipelines.GetPageRendering.AddRenderingAssets, xHelix.Foundation.Assets"/>
            </mvc.getPageRendering>
        </pipelines>
    </sitecore>
</configuration>