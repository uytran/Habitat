<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <events>
      <event name="item:added">
        <handler type="xHelix.Foundation.LocalDatasource.Infrastructure.Events.UpdateLocalDatasourceReferences, xHelix.Foundation.LocalDatasource" method="OnItemAdded" />
      </event>
      <event name="item:copied">
        <handler type="xHelix.Foundation.LocalDatasource.Infrastructure.Events.UpdateLocalDatasourceReferences, xHelix.Foundation.LocalDatasource" method="OnItemCopied" />
      </event>
    </events>

    <pipelines>
      <getRenderingDatasource>
        <processor type="xHelix.Foundation.LocalDatasource.Infrastructure.Pipelines.GetLocalDatasourceLocation, xHelix.Foundation.LocalDatasource" patch:before="processor[@type='Sitecore.Pipelines.GetRenderingDatasource.CheckDialogState, Sitecore.Kernel']" />
      </getRenderingDatasource>
      <indexing.getDependencies>
        <processor type="xHelix.Foundation.LocalDatasource.Infrastructure.Pipelines.GetLocalDatasourceDependencies, xHelix.Foundation.LocalDatasource" />
      </indexing.getDependencies>
    </pipelines>
    <settings>
      <setting name="Foundation.LocalDatasource.LocalDatasourceFolderName" value="_Local" />
      <setting name="Foundation.LocalDatasource.LocalDatasourceFolderTemplate" value="{FFF5F245-FFC0-4022-A998-9B07AA5E761F}" />
    </settings>
    <contentSearch>
      <indexConfigurations>
        <defaultLuceneIndexConfiguration type="Sitecore.ContentSearch.LuceneProvider.LuceneIndexConfiguration, Sitecore.ContentSearch.LuceneProvider">
          <documentOptions>
            <fields hint="raw:AddComputedIndexField">
              <field fieldName="local_datasource_content" storageType="NO" indexType="TOKENIZED">xHelix.Foundation.LocalDatasource.Infrastructure.Indexing.LocalDatasourceContentField, xHelix.Foundation.LocalDatasource</field>
            </fields>
          </documentOptions>
        </defaultLuceneIndexConfiguration>
      </indexConfigurations>
    </contentSearch>
    <solutionFramework>
      <indexing>
        <providers>
          <add name="localdatasource" type="xHelix.Foundation.LocalDatasource.Infrastructure.Indexing.LocalDatasourceQueryPredicateProvider, xHelix.Foundation.LocalDatasource" patch:before="add[@name='fallback']" />
        </providers>
      </indexing>
    </solutionFramework>
  </sitecore>
</configuration>